<div class="docs">

    <script type="text/javascript">
    $(function() {

        function lineChart(cont, data) {
        // initialize theme
            var theme = Datawrapper.Themes.Default;
            // initialize chart
            var chart = new Datawrapper.Chart({
                type: "line-chart",
                metadata: {
                    data: {
                        transpose: false,
                        'horizontal-header': true,
                        'vertical-header': true
                    },
                    visualize: {
                        'direct-labeling': false,
                        'rotate-x-labels': false,
                        'baseline-zero': false,
                        'force-banking': false,
                        'connect-missing-values': true,
                        'highlighted-values': [],
                        'highlighted-series': []
                    },
                    describe: {
                        'number-format': 'n0',
                        'number-divisor': 0,
                        'number-currency': '',
                        'number-unit': '',
                        'number-append': '',
                        'number-prepend': ''
                    }
                }
            });

            // initliaze visualization
            var vis = new Datawrapper.Visualizations.LineChart();

            vis.setTheme(theme);
            vis.chart = chart;
            chart.setLocale('en', {"3":"k","6":"m","9":"b","12":"t"});
            chart.rawData(data);
            vis.dataset = chart.__dataset;
            vis.getSize = function() { return [$('.span6').width(),200] };
            vis.render(cont);
        }

        lineChart('#user-stats', 'date;users-signed;users-activated\n12.3.;9;6\n13.3.;15;8\n14.3.;15;9\n15.3.;15;12\n16.3.;19;13');
        lineChart('#chart-stats', 'date;users-signed;users-activated\n12.3.;9;6\n13.3.;15;8\n14.3.;15;9\n15.3.;15;12\n16.3.;19;13');
    });
    </script>

    <style type="text/css">

