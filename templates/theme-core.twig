

{% block chart_head %}
<div class="dw-chart-header" id="header">
    {% if not plain %}

    {{ block('chart_title') }}
    {{ block('chart_intro') }}
    {{ block('chart_fullscreen') }}

    {% endif %}
</div>
{% endblock %}

{% block chart_head_no_fs %}
<div class="dw-chart-header" id="header">
    {% if not plain %}

    {{ block('chart_title') }}
    {{ block('chart_intro') }}

    {% endif %}
</div>
{% endblock %}


{% block chart_title %}
    <h1 {% if not title %}class="hidden"{% endif %}>
        <span class="chart-title">{{ title | purify | raw }}</span>
    </h1>
{% endblock %}


{% block chart_intro %}
    <p class="chart-intro{% if not intro %} hidden{% endif %}">{{ intro|purify|raw }}</p>
{% endblock %}

{% block chart_fullscreen %}
{% endblock %}


{% block chart_source %}
    {% if chartSource %}
        <span data-src="{% trans "Source: " %}" class="source-block">{% trans "Source: " %}
        {{ chartSource | raw }}</span>
    {% endif %}
{% endblock %}
