

<div id="header">
    {% if not plain %}
    {% if title %}
    <h1><span class="chart-title">{{ title|purify|raw }}</span></h1>
    {% endif %}

    {% if intro %}
    <p class="chart-intro">{{ intro|purify|raw }}</p>
    {% endif %}

    {% endif %}
    <a href="{{ chartUrlFs }}" target="_blank" class="fs-btn top-right" title="{% trans "Fullscreen" %}" data-toggle="fullscreen"></a>
</div>

<div id="chart"></div>

<div id="footer">
    {% if not plain %}
        <div class="footer-left">
             {% trans "Created with" %} <a href="{{ DW_DOMAIN }}" target="_blank" class="lgo">Datawrapper</a>
        </div>
        <div class="footer-right">
            <div class="toggleable-panel">
                {% if source %}

                    <span data-src="{% trans "Source: " %}" class="source-block">{% trans "Source: " %}
                    {% if sourceURL %}<a target="_blank" class="source" href="{{ sourceURL }}">{% endif %}{{ source }}{% if sourceURL %}</a>{% endif %}</span>

                {% endif %}
                <a href="data">{% trans "Get the data" %}</a>
            </div>
            <a class="toggle-panel">{% trans "About" %}</a>
        </div>
        <div class="toggleable-panel-overlay"></div>
    {% endif %}
</div>
