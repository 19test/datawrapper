{
    "title": {
        "en": "Line Chart",
        "de": "Liniendiagramm",
        "fr": "Diagramme temporel"
    },
    "author": {
        "name": "gka",
        "email": "gka@vis4.net"
    },
    "extends": "raphael-chart",
    "dimensions": 2,
    "license": {
        "name": "MIT",
        "url": "http://www.opensource.org/licenses/mit-license.php"
    },
    "about": "http://vis4.net/blog/posts/doing-the-line-charts-right/",
    "options": {
        "scale": {
            "type": "radio",
            "label": {
                "en": "Scale (y-axis)",
                "de": "Skala (y-Achse)",
                "fr": "Échelle (axe des y)"
            },
            "options": [{
                "value": "linear",
                "label": {
                    "en": "linear",
                    "de": "linear",
                    "fr": "linéaire"
                },
                "default": true
            },{
                "value": "log",
                "label": {
                    "en": "logarithmic",
                    "de": "logarithmisch",
                    "fr": "logarithmique"
                }
            }]
        },
        "baseline-zero": {
            "type": "checkbox",
            "label": {
                "en": "Baseline zero",
                "de": "Baseline bei null",
                "fr": "Échelle en zero"
            }
        },
        "force-banking": {
            "type": "checkbox",
            "label": {
                "en": "Force banking to 45°",
                "de": "Logarithmische Skala",
                "fr": "Use logarithmic scale"
            }
        }
    },
    "compatibility": {
        "msie": "9+",
        "moz": "5+",
        "webkit": "3+",
        "ios": "no"
    }
}